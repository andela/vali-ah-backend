{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"**/*.js\" --fix",
    "build": "babel src --out-dir dist",
    "start": "node dist/index.js",
    "start:dev": "cross-env DEBUG=dev nodemon --exec babel-node src/index.js",
    "test": "mocha --require @babel/register tests/test.js --exit",
    "test:coverage": "nyc --reporter=text --reporter=lcov npm run test",
    "coveralls": "nyc report --reporter=lcov --reporter=text-lcov | coveralls ",
    "sync-env": "sync-dotenv"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sync-dotenv": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run sync-env && npm run lint && npm run test"
    }
  }
}
