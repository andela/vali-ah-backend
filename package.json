{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "db:migrate": "npm run sequelize-cli:es6 db:migrate",
    "db:undo": "sequelize db:migrate:undo:all",
    "dev": "nodemon --exec babel-node src/index.js",
    "lint": "eslint \"**/*.js\" --fix",
    "sequelize-cli:es6": "babel-node ./node_modules/.bin/sequelize $*",
    "start": "node dist/index.js",
    "start:dev": "cross-env DEBUG=dev nodemon --exec babel-node src/index.js",
    "sync-env": "sync-dotenv",
    "test": "mocha --require @babel/register tests/test.js --exit",
    "test:coverage": "nyc --reporter=text --reporter=lcov npm run test"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.10.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sequelize-cli": "^5.5.0",
    "sync-dotenv": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run sync-env && npm run lint && npm run test"
    }
  }
}
